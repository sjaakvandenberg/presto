// slides

main
  width 100%
  height 100vh
  overflow hidden
  section
    font-weight 200
    font-size 150%
    line-height 1.375

    width 100%
    height 100%
    position absolute
    top 0
    left 0

    display flex
    justify-content center
    flex-direction column
    animation-fill-mode both
    overflow hidden

    opacity 0
    transition opacity 0.35s

    &::before
      background #121315
      color #eee
      font-size 12px
      position absolute
      top 0
      left 0
      padding .2em
      content '30em-'

    &.current
      opacity 1
      transition opacity .35s

    &.center
      align-items center
      text-align center

    &.background
      background-attachment fixed
      background-position center center
      background-repeat no-repeat
      background-size cover

@media (min-width: 30em) // 480px +
  main > section
    font-size 125%
    &::before
      content '30em+'
    blockquote
      p
        padding 0.4em 0.8em

@media (min-width: 40em) // 640px +
  main > section
    font-size 150%
    &::before
      content '40em+'
