html
  box-sizing border-box
  height calc(100%)

body
  font-family 'Open Sans', sans-serif
  font-size 100%
  background-color #191919
  color #eee
  margin 0
  padding 0

h1,
h2,
h3,
h4,
h5,
h6
  font-family 'Merriweather', serif
  padding 0 1.25em

h1
  font-size 200%

h2
  font-size 150%

h3
  font-size 125%

h4
  font-size 100%

h5
  font-size 87.5%

h6
  font-size 66.667%

p,
ul,
ol
  padding 0 1.25em

ul,
ol
  text-align left

li
  margin-left 1.25em
  padding-left 0.5em

blockquote
  background #272822
  border-left 5px solid #eee
  border-radius 0 3px 3px 0
  p
    color #eee
    padding 0.25em 0.5em
    margin 0

code
  background #272822
  border-radius 3px
  padding 0.15em 0.35em

pre
  margin 0
  position relative
  overflow hidden

